<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/save_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/save_dialog_name_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarStyle">
        <Button
            android:id="@+id/save_dialog_play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_play"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/save_dialog_stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_stop"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>
