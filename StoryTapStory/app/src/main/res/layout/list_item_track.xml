<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/track"
    android:background="@drawable/bg_pressable"
    style="@style/ListItem">

    <ImageView
        android:id="@+id/track_drag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_drag_handle"
        android:tint="@color/drag_handle_tint"
        android:contentDescription="@string/label_drag_handle" />

    <TextView
        android:id="@+id/track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@id/track_drag"
        style="@style/ListItemTitle"
        tools:text="Track Title" />

    <ImageButton
        android:id="@+id/track_delete"
        android:layout_toEndOf="@id/track_title"
        android:contentDescription="@string/label_delete"
        android:src="@drawable/ic_delete"
        style="@style/ListIconButton"/>

</RelativeLayout>
