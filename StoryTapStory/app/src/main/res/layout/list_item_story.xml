<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/story_item"
    android:orientation="horizontal"
    android:background="@drawable/bg_icon_button"
    style="@style/ListItem">

    <TextView
        android:id="@+id/story_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        style="@style/ListItemTitle"
        tools:text="Story Title" />

    <ImageButton
        android:id="@+id/story_edit"
        android:layout_toEndOf="@id/story_title"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/label_edit"
        android:src="@drawable/ic_edit"
        style="@style/ListIconButton"/>

</RelativeLayout>
